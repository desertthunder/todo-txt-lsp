{
    "name": "todo-txt-lsp",
    "displayName": "Todo.txt LSP",
    "version": "0.1.0",
    "description": "Language server for todo.txt files.",
    "main": "./client/out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "npm run preflight && tsc -b -w"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "@types/vscode": "^1.96.0",
        "@vscode/test-electron": "^1.6.2",
        "typescript": "^5.7.2"
    }
}
